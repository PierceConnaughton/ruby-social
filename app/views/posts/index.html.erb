<h1>Posts</h1>

  <% @posts.each do |post| %>
    <div class="card my-3">
      <div class="card-body">
        <% if post && post.image.attached? %>
          <%= image_tag post.image, class: "card-img-top", style: "max-height: 250px;, max-width: 100px;" %>
        <% end %>
        <h2 class="card-title mt-3"><%= post.description %></h2>
        <p class="card-text">Posted by <%= post.account.username %></p>
      </div>
    </div>
  <% end %>