<h1>Posts</h1>

  <% @posts.each do |post| %>
    <div class="card my-3">
      <div class="card-body">
        <% if post && post.image.attached? %>
          <%= image_tag post.image, class: "card-img-top", style: "max-height: 250px;, max-width: 100px;" %>
        <% end %>
        <div class="col">
          <div class="row">
        <p class="card-title mt-3">Description: <%= post.description %></p>
        </div>
        <div class="row">
        <p><span>Posted by <%= link_to "@#{post.account.username}", profile_show_path(username: post.account.username) %> on <%= post.created_at.strftime('%B %d, %Y') %> </span></p>
        </div>
        <p><strong>Total Likes:</strong> <%= post.likes_count %></p>
       <% if current_account && (like = post.likes.find_by(account: current_account)) %>
  <%= button_to "Unlike", post_like_path(post, like), method: :delete, class: "btn btn-danger" %>

<% else %>
  <%= button_to "Like", post_likes_path(post), method: :post, class: "btn btn-primary" %>
<% end %>




        </div>
      </div>
    </div>
  <% end %>