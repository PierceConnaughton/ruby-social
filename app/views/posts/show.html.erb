<div class="container">
  <div class="card">
    <% if @post.image.attached? %>
      <%= image_tag @post.image, class: "card-img-top", style: "max-height: 400px; max-width: 100%;" %>
    <% end %>
    <div class="card-body">
      <h2 class="card-title"><%= @post.description %></h2>
      <p class="card-text">This post was created at: <%= @post.created_at %></p>
      <p class="card-text"><strong>Total Likes:</strong> <%= @post.likes_count %></p>
      <% if current_account && (like = @post.likes.find_by(account: current_account)) %>
        <%= button_to "Unlike", post_like_path(@post, like), method: :delete, class: "btn btn-danger" %>
      <% else %>
        <%= button_to "Like", post_likes_path(@post), method: :post, class: "btn btn-primary" %>
      <% end %>
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
