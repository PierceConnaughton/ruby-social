
  <h1><%= @account.username %>'s Profile</h1>

  <div class="row">
    <div class="col-md-6">
      <% if @account.username? %>
        <p><strong>Username:</strong> <%= @account.username %></p>
      <% end %>
      <% if @account.first_name? %>
        <p><strong>First name:</strong> <%= @account.first_name %></p>
      <% end %>
      <% if @account.last_name? %>
        <p><strong>Last name:</strong> <%= @account.last_name %></p>
      <% end %>
      <% if @account.bio? %>
        <p><strong>Bio:</strong> <%= @account.bio %></p>
      <% end %>
    </div>
    <div class="col-md-6">
      <% if @account.profile_image.attached? %>
        <p><strong>Profile image:</strong></p>
        <%= image_tag @account.profile_image, style: "height: 200px; width: 200px; border-radius: 50%;" %>
      <% end %>
    </div>
  </div>

  <% if current_account == @account %>
    <div class="mt-3">
      <%= link_to "Edit Profile", edit_account_registration_path(current_account), class: "btn btn-primary" %>
    </div>
  <% end %>

  <h2>Posts</h2>
  <p><strong>Total posts:</strong> <%= @posts.count %></p>

 <% @posts.each_with_index do |post, index| %>
    <% if index % 3 == 0 %>
      <div class="row mt-3">
    <% end %>
    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <% if post && post.image.attached? %>
            <%= image_tag post.image, class: "card-img-top" %>
          <% end %>
          <%= link_to "View post", post_path(post), class: "btn btn-primary" %>

        </div>
      </div>
    </div>
    <% if (index + 1) % 3 == 0 %>
      </div>
    <% end %>
  <% end %>
  </div>



